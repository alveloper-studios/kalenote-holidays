{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "HolidayYearV1",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "date",
            "name",
            "type"
        ],
        "properties": {
            "date": {
                "type": "string",
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
            },
            "name": {
                "type": "string",
                "minLength": 1
            },
            "type": {
                "type": "string",
                "enum": [
                    "libur",
                    "cuti"
                ]
            }
        },
        "additionalProperties": false
    }
}